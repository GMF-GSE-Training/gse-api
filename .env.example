# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DATABASE_NAME>"

# ===========================================
# STORAGE CONFIGURATION (PILIH SALAH SATU)
# ===========================================
# Pilih storage provider: 'minio' untuk development, 'supabase' untuk production
STORAGE_TYPE=<minio|supabase>

# --- Minio Configuration (Development/Local) ---
MINIO_ENDPOINT=<MINIO_ENDPOINT>
MINIO_PORT=<MINIO_PORT>
MINIO_USE_SSL=<true|false>
MINIO_ACCESS_KEY=<MINIO_ACCESS_KEY>
MINIO_SECRET_KEY=<MINIO_SECRET_KEY>
MINIO_BUCKET=<MINIO_BUCKET>
MINIO_PUBLIC_BUCKET=<MINIO_PUBLIC_BUCKET>

# --- Supabase Storage Configuration (Production/Cloud) ---
SUPABASE_URL=<SUPABASE_URL>
SUPABASE_SERVICE_KEY=<SUPABASE_SERVICE_KEY>
SUPABASE_BUCKET=<SUPABASE_BUCKET>
SUPABASE_PUBLIC_BUCKET=<SUPABASE_PUBLIC_BUCKET>
LOGO_PATH=<LOGO_PATH>

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
NODE_ENV=<development|production>
PROTOCOL=<http|https>
HOST=<HOST_ADDRESS>
PORT=<PORT_NUMBER>
FRONTEND_URL=<FRONTEND_URL>
BACKEND_URL=<BACKEND_URL>
CORS_ORIGIN=<CORS_ORIGIN>

# ===========================================
# QR CODE CONFIGURATION
# ===========================================
QR_CODE_LINK=<QR_CODE_BASE_URL_WITH_PLACEHOLDER>

# ===========================================
# SECURITY TOKENS
# ===========================================
ACCESS_TOKEN=<ACCESS_TOKEN_SECRET>
REFRESH_TOKEN=<REFRESH_TOKEN_SECRET>
VERIFICATION_TOKEN=<VERIFICATION_TOKEN_SECRET>

# ===========================================
# MAIL CONFIGURATION
# ===========================================
MAIL_HOST=<MAIL_SERVER_HOST>
MAIL_PORT=<MAIL_SERVER_PORT>
MAIL_USER=<EMAIL_ADDRESS>
MAIL_PASS=<EMAIL_PASSWORD>

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME='<APPLICATION_NAME>'

# ===========================================
# HCAPTCHA CONFIGURATION
# ===========================================
HCAPTCHA_SECRET=<HCAPTCHA_SECRET>