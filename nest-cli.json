{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../public/assets/**/*",
        "outDir": "dist/public"
      },
      {
        "include": "./templates/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
