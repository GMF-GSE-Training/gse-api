{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@i18n/*": ["src/i18n/*"],
      "@auth/*": ["src/auth/*"],
      "@storage/*": ["src/file-upload/providers/*"],
      "@exceptions/*": ["src/file-upload/exceptions/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "prisma/**/*", "test/**/*", "migrate.ts", "seed.ts"],
  "exclude": ["node_modules", "dist", "coverage", "migrate.js"]
}